<div class="modal fade" id="modalBeneficiarios" tabindex="-1" role="dialog" aria-labelledby="modalBeneficiariosLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalBeneficiariosLabel">Beneficiários</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formCadastroBeneficiario" method="post" action="@Url.Action("IncluirBeneficiario", "Beneficiario")">
                    <input type="hidden" id="IDCliente" name="IDCliente" value="">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="CPFBeneficiario">CPF:</label>
                                <input type="text" class="form-control" id="CPFBeneficiario" name="CPFBeneficiario" placeholder="Ex.: 010.011.111-00" maxlength="14">
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="NomeBeneficiario">Nome:</label>
                                <input type="text" class="form-control" id="NomeBeneficiario" name="NomeBeneficiario" placeholder="Informe o nome do Beneficiário">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <br />
                            <button type="submit" class="btn btn-success">Incluir</button>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-12">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th class="col-md-4">CPF</th>
                                        <th class="col-md-4">Nome</th>
                                        <th class="col-md-4">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>CPF</td>
                                        <td>Nome</td>
                                        <td>
                                            <button type="button" class="btn btn-primary btn-sm">Alterar</button>
                                            <button type="button" class="btn btn-primary btn-sm">Excluir</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
